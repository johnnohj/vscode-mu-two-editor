{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"outDir": "../out/test",
		"lib": ["es2020"],
		"sourceMap": true,
		"rootDir": "./",
		"strict": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": [
		"./integration/**/*"
	],
	"exclude": [
		"../node_modules",
		"../dist",
		"../out",
		"../src",
		"./unit/**/*"
	]
}
