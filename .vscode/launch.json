{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}"],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js",
				"${workspaceFolder}/public/**/*.js"
			],
			"preLaunchTask": "build: launch",
		},
